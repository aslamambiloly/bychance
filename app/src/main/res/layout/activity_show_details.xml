<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.theme.ShowDetailsActivity">

  <ImageView
      android:id="@+id/imageView8"
      android:layout_width="700dp"
      android:layout_height="650dp"
      android:layout_marginTop="-540dp"
      android:rotation="20"
      android:src="@drawable/brownbtn2"
      app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
      app:layout_constraintEnd_toEndOf="@+id/scrollView2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="600dp"
      android:layout_height="900dp"
      android:layout_marginBottom="-100dp"
      android:layout_marginTop="80dp"
      android:adjustViewBounds="false"
      android:rotation="240"
      android:scaleType="fitCenter"
      android:src="@drawable/bgtop"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <TextView
          android:id="@+id/titleTxt"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          android:fontFamily="@font/poppins_bold"
          android:text="title"
          android:textAlignment="center"
          android:textColor="#F8F7F5"
          android:textSize="28sp" />

      <ImageView
          android:id="@+id/imgFood"
          android:layout_width="300dp"
          android:layout_height="300dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="40dp"
          android:src="@drawable/cat_1" />

      <TextView
          android:id="@+id/feeTxt"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:elevation="10dp"
          android:fontFamily="@font/poppins_black"
          android:text="â‚¹"
          android:textAlignment="center"
          android:textColor="#835c0c"
          android:textSize="60sp" />

      <TextView
          android:id="@+id/descriptionTxt"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="18dp"
          android:fontFamily="@font/poppins_regular"
          android:paddingEnd="40dp"
          android:paddingStart="40dp"
          android:text="TextView"
          android:textAlignment="center"
          android:textSize="20sp" />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/cl1"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_gravity="center"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/minusCardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/brownbtn"
            android:elevation="8dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="less."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.22000003" />

        <TextView
            android:id="@+id/numberOrderTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="1"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/plusCardBtn"
            app:layout_constraintStart_toEndOf="@+id/minusCardBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.22000003" />

        <TextView
            android:id="@+id/plusCardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/brownbtn"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="add."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.22000003" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
  </ScrollView>

  <TextView
      android:id="@+id/addToCartBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/orange_light_banner"
      android:elevation="10dp"
      android:fontFamily="@font/poppins_bold"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      android:text="add to cart."
      android:textColor="#835c0c"
      android:textSize="28sp"
      app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
      app:layout_constraintEnd_toEndOf="@+id/scrollView2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>